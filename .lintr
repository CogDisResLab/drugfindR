linters: linters_with_tags(
    tags = c("default", "style", "misc", "potential-bug", "performance", "documentation", "risky", "package_development"),
    line_length_linter(length = 120L),
    indentation_linter(indent = 4L),
    undesirable_function_linter(modify_defaults(defaults = default_undesirable_functions, library = NULL)))
encoding: "UTF-8"
exclusions: list(
    "renv/",
    "vignettes/"
)
